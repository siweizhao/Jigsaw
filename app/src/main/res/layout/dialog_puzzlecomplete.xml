<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Wrap"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Wrap"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/Wrap"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextView"
                android:text="Difficulty:"/>

            <TextView
                style="@style/TextView"
                android:text="Time:"/>

            <TextView
                style="@style/TextView"
                android:text="Reward:"/>
        </LinearLayout>

        <!-- Values -->
        <LinearLayout
            style="@style/Wrap"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogPuzzleComplete_difficultyTxt"
                style="@style/TextView" />

            <TextView
                android:id="@+id/dialogPuzzleComplete_TimeTxt"
                style="@style/TextView"/>

            <LinearLayout
                style="@style/Wrap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialogPuzzleComplete_RewardTxt"
                    style="@style/TextView"/>

                <ImageView
                    style="@style/Wrap"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_coin24dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>