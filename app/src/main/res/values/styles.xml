<resources>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapCenterParent" parent="@style/Wrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonBasic" parent="@style/WrapCenterParent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewBasic" parent="@style/Wrap">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="difficulty_dialog" parent="@android:style/Theme.Dialog" />

    <style name="dialog_light" parent="@android:style/Theme.Dialog">
        <item name="@android:windowBackground">@color/whitegrey</item>
        <item name="@android:textColor">@color/black</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
