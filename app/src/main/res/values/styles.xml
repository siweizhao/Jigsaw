<resources>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapCenterParent" parent="@style/Wrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonBasic" parent="@style/WrapCenterParent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView" parent="@style/Wrap">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Seekbar">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:progressDrawable">@drawable/seek_style</item>
        <item name="android:splitTrack">false</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
